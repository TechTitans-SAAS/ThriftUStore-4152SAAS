<%= form_with(model: [item, comment], local: true) do |form| %>
  <div class="form-group">
    <%= form.rich_text_area :body, class: 'form-control', rows: 4 %>
  </div>

  <% if comment.new_record? %>
    <%= form.submit "Submit Comment", class: 'btn btn-primary' %>
  <% else %>
    <%= form.submit "Update Comment", class: 'btn btn-success btn-sm' %>
    <%= button_tag "Cancel", type: "button", class: "btn btn-secondary btn-sm cancel-edit" %>
  <% end %>
<% end %>
