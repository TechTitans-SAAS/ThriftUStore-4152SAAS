<!-- app/views/layouts/application.html.erb -->
<!DOCTYPE html>
<html lang="en">
<head>
  <title>ThriftyUStore Home</title>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= stylesheet_link_tag 'https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css', 'data-turbolinks-track': 'reload' %>
  <style>
      /* Custom styles go here */
      body {
          padding-top: 100px; /* Adjusted to accommodate fixed navbar height */
          background-color: #393939; /* Dark background */
          color: #ffffff; /* White text */
      }
      header{
          padding: 0px;
      }
      footer{
          padding: 0px;
      }
      .navbar {
          height: 40px;
          background-color: #393939; /* Dark navbar background */
          box-shadow: 0px 2px 5px 0px rgba(0, 0, 0, 0.2); /* Adding a subtle shadow */
      }



      .navbar-dark .navbar-toggler-icon {
          background-color: #ffffff; /* White navbar toggler icon */
      }

      .navbar-nav .nav-item .nav-link {
          color: #ffffff; /* White text for nav links */
          transition: color 0.5s ease-in-out; /* Smooth color transition on hover */
      }

      .navbar-nav .nav-item .nav-link:hover {
          color: #f0f0f0; /* Lighter white color on hover */
          background-color: lightgrey;
          border-radius: 10%;
      }

      .navbar-brand {
          color: #ffffff; /* White text */
      }

      .navbar-brand:hover {
          color: #f0f0f0; /* Lighter white color on hover */
          background-color: #393939;

      }

      .hero {
          background-color: #6e6e6e; /* Orange background */
      }

      .hero h1,
      .hero p,
      .footer span {
          color: #ffffff; /* White text */
      }

      .footer {
          position: fixed;
          bottom: 0;
          width: 100%;
          background-color: #393939; /* Dark footer background */
      }

      .btn-outline-light {
          border-color: #ffffff; /* White border for outline buttons */
          color: #ffffff; /* White text for outline buttons */
      }

      .btn-light {
          background-color: #ffffff; /* White background for solid buttons */
          color: #393939; /* Dark text for solid buttons */
      }

      .btn-light:hover,
      .btn-outline-light:hover {
          background-color: #6e6e6e; /* Dark background on hover */
          color: #ffffff; /* White text on hover */
      }
  </style>
</head>
<body>


  <!-- Hero Section -->
  <section class="hero py-5">
    <h1 class="display-4 text-center">Welcome to ThriftyUStore</h1>
    <p class="lead text-center">
      Your one-stop marketplace for buying and selling among international students. Discover a community that saves together.
    </p>
    <div class="text-center mt-4">
      <%= link_to "Shop Now", items_path, class: "btn btn-lg btn-light" %>
    </div>
  </section>

  <!-- Footer -->

  <footer class="footer py-3 text-white text-center">

      <span>Copyright Â© <%= Time.now.year %> ThriftyUStore. All rights reserved.</span>
      <!-- Potential space for social media links/icons -->

  </footer>

<!-- </div> -->

<!-- Bootstrap and jQuery libraries -->
<%= javascript_include_tag 'https://code.jquery.com/jquery-3.5.1.slim.min.js', 'data-turbolinks-track': 'reload' %>
<%= javascript_include_tag 'https://cdnjs.cloudflare.com/ajax/libs/popper.js/2.9.3/umd/popper.min.js', 'data-turbolinks-track': 'reload' %>
<%= javascript_include_tag 'https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js', 'data-turbolinks-track': 'reload' %>

</body>
</html>
