<h1 class="text-center"><%= pluralize(@items.count, "Result") %></h1>
<%= render 'search/form'%>
<div class="container">
  <table class="table table-dark table-striped">
    <thead>
      <tr>
        <th><%= sort_link(@query, :title, "Title", default_order: :asc) %></th>
        <th><%= sort_link(@query, :detail, "Detail") %></th>
        <th><%= sort_link(@query, :full_name, "Users") %></th>
      </tr>
    </thead>
    <tbody>
      <% @items.each do |item| %>
        <tr>
          <td><%= link_to item.title, item %></td>
          <td><%= item.detail.truncate_words(25) %></td>
          <td><%= link_to item.user.full_name, item.user %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
